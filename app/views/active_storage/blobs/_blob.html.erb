<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.video? %>
    <%= video_tag main_app.polymorphic_url(blob.attachable), controls: true, autoplay: false, class: "rounded py-1" %>
  <% elsif blob.audio? %>
    <audio src="">Audio</audio>
    <%= audio_tag(main_app.polymorphic_url(blob), controls: true, data: { title: blob.filename }, class: "w-full") %>
  <% elsif blob.representable? %>
    <%= image_tag blob.representation(resize_to_limit: [ 800, 600 ]) %>
  <% end %>
  <span class="text-xs"><%= blob.filename %></span>
</figure>
