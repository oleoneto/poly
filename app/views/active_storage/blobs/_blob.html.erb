<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.video? %>
    <%= video_tag main_app.polymorphic_url(blob.attachable), controls: true, autoplay: false, class: "" %>
  <% elsif blob.audio? %>
    <%= audio_tag(main_app.polymorphic_url(blob), controls: true, data: { title: blob.filename }, class: "") %>
  <% elsif blob.representable? %>
    <%= image_tag main_app.url_for(blob) %>
  <% end %>
</figure>
