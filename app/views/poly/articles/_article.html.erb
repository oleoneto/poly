<div class="article_color__programming p-5 rounded-lg text-white shadow-md">
  <div class="flex justify-between text-xs pb-3" style="font-size: 0.59rem">
    <p class="uppercase font-semibold"><%= relative_time_in_words(article.created_at) %></p>
    <p class="uppercase article_color__programming_secondary text-gray-200 rounded-sm px-1 font-bold">
      <%= article.author.name %>
    </p>
  </div>
  <%= link_to article, class: "mt-2 block" do %>
    <h3 class="pb-4 font-bold text-2xl hover:text-gray-100 md:truncate">
      <%= article.title %>
    </h3>
  <% end %>
  <p class="text-sm text-gray-100"><%= article.excerpt %></p>
</div>
