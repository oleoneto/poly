<main class="mx-auto px-5 md:px-10 lg:px-20">
  <div class="pb-12 px-4 sm:px-6 lg:pt-24 lg:pb-10 lg:px-8">
    <section>
      <div class="py-4 flex items-start space-x-3 rounded border-b border-tertiary">
        <%= image_tag user_avatar(@user), class: "rounded-full w-16 h-16" %>

        <div class="flex flex-col">
          <h2 class="font-bold text-lg md:text-xl">
            <%= @user.name %>
          </h2>

          <div id="stats" class="flex flex-col items-start text-secondary text-sm">
            <p>X number of contributions</p>
            <div class="font-light flex items-center">
              <svg class="w-4 h-4 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
              <p>
                Some contributions may be private
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</main>