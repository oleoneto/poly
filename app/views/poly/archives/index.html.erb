<main class="mx-auto px-5 md:px-10 lg:px-20">
  <div class="pt-10 pb-12 px-4 sm:px-6 lg:pt-24 lg:pb-10 lg:px-8">
    <div class="relative max-w-7xl mx-auto lg:max-w-7xl">
      <div>
        <h2 class="text-4xl tracking-tight font-extrabold text-primary sm:text-6xl">
          Archives
        </h2>
        <div class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center">
          <p class="text-lg text-secondary max-w-xl">
            This unified archive view combines both archived and trashed records.
            Records are automatically deleted from the trash after <%= distance_of_time_in_words Poly.trash_ttl %>.
          </p>
        </div>
      </div>

      <div class="py-8 grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <% @archives.latest.each do |archive| %>
          <%= render archive %>
        <% end %>
      </div>
      <%== pagy_nav(@paginator) if @paginator.pages > 1 %>
    </div>
  </div>

  <formset>
<!--    <div data-controller="dyno" data-dyno-param-value="country" data-dyno-url-value="https://google.com">-->
      <%#= select_tag :country, [1, 2], { class: 'w-1/2', prompt_text: 'Select a country', data: {action: 'change->dyno#change'} } %>
      <%#= select_tag :state, [3, 4], { class: 'w-1/2', data: {dyno_target: 'stateSelect'} } %>
<!--    </div>-->

    <div data-controller="reactive-text--skip">
      <input type="text" class="input-base bg-secondary" placeholder="Type something" data-reactive-text-target="source">
      <h1 class="font-bold text-2xl" data-reactive-text-target="output"></h1>
    </div>
  </formset>
</main>
